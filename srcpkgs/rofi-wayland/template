do_fetch() {
	git clone ${distfiles} ${pkgname}-${version}
}

do_extract() {
	echo $PWD
}

pre_build() {
	cd ${XBPS_BUILDDIR}/${pkgname}-${version}
	echo $PWD
	git submodule update --init
}

do_build() {
	meson compile -C build
}
